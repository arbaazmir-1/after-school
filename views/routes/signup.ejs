<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" href="css/createpage.css" />
  <!-- <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous" /> -->
  <title>Create an Account</title>
</head>

<body>
  <div class="container-main">
    
      <div class="form-cont-outer">
        <a href="/"><img class="img-logo" src="assests/logo.png" alt="" /></a>
        <div class="form">
          <h1>Sign Up</h1>
          <% if(success && success.length){ %>
            <div  class="alert success-alert" role="alert">
              <%=success%>
          
            </div>
            <% } %>
          
              <% if(error && error.length){ %>
                <div class="alert error-alert" role="alert">
                  <%=error%>
          
                </div>
                <% } %>
          <form action="/user/register" method="POST">
            <ul class="form-act">
              <li>
                <label for="email">Email</label>
                <input type="email" placeholder="Enter Your Inti Email " name="email" required />
              </li>
              <li>
                <label for="Name">Name</label>
                <input type="text" placeholder="Enter Your Full Name" name="name" required />
              </li>
             
              <li>
                <label for="username">StudentID</label>
                <input type="text" placeholder="Enter Your StudentID" name="username" required />
              </li>
              <li>
                <label for="password">Password</label>
                <input type="password" placeholder="Enter Your Password" name="password" required />
              </li>
              <li>
                <label for="repassword">Re-Enter Password</label>
                <input type="password" placeholder="Re-Enter Your Password" name="repassword" required />
              </li>
              <button id="createBtn" class="btn">Sign Up</button>


          </form>
          <p>Already have an account?</p>
          <a href="/login" class="btn">Login</a>

          </ul>
        </div>
      </div>
      <div class="image-cont">
        <img src="assests/image2.png" alt="" />
      </div>
  </div>


  <script>
    const tiptext = document.querySelector('.alert');

    function myFunction() {
      setTimeout(function () {
        tiptext.style.display = 'none';
      }, 5000);
    }

    myFunction();

  </script>
  <!-- <script src="/js/formvalidation.js"></script> -->
</body>

</html>